import ProjectCard from './ProjectCard.astro';

const projects = [
  {
    name: 'drwxr-xr-x biometric-watermarking/',
    tools: 'Python | PyTorch | GANs',
    description: 'Deep learning system designed to combat audio deepfakes using CNN-based biometric hashes.',
    repo: 'https://github.com/LilRag/Hybrid-Audio-Verification-via-Biometric-Watermarking'
  },
  {
    name: 'drwxr-xr-x metro-econometrics/',
    tools: 'Python | Scikit-Learn',
    description: 'Geospatial pipeline modeling property values with a Gradient Boosting Regressor (RÂ²=0.82).',
    repo: 'https://github.com/Abh004/Bengaluru-Metro-Spatial-Econometrics'
  },
  {
    name: 'drwxr-xr-x retail-management/',
    tools: 'PostgreSQL | Express.js | Node.js',
